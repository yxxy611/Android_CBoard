<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/bottom_ui"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/main_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:background="@drawable/button_menu_selector"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"

        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="RtlHardcoded"/>

    <GridLayout
        android:id="@+id/main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="5dp"
        android:background="@drawable/expand_menu"
        android:columnCount="3"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/main_menu_button"
        app:layout_constraintLeft_toLeftOf="@+id/main_menu_button">

        <LinearLayout style="@style/buttonLayoutStyle">

            <ImageButton
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/button_menu_selector"
                android:src="@drawable/ic_save"/>

            <TextView
                android:id="@+id/save_text"
                style="@style/buttonTextStyle"
                android:text="保存"/>
        </LinearLayout>

        <LinearLayout style="@style/buttonLayoutStyle">

            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/button_menu_selector"
                android:src="@drawable/ic_share"/>

            <TextView
                android:id="@+id/share_text"
                style="@style/buttonTextStyle"
                android:text="扫码分享"/>
        </LinearLayout>

        <LinearLayout style="@style/buttonLayoutStyle">

            <ImageButton
                android:id="@+id/email_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/button_menu_selector"
                android:src="@drawable/ic_email"/>

            <TextView
                android:id="@+id/email_text"
                style="@style/buttonTextStyle"
                android:text="邮件发送"/>
        </LinearLayout>

        <LinearLayout style="@style/buttonLayoutStyle">

            <ImageButton
                android:id="@+id/change_bg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/button_menu_selector"
                android:src="@drawable/ic_changebg"/>

            <TextView
                android:id="@+id/change_bg_text"
                style="@style/buttonTextStyle"
                android:text="背景"/>
        </LinearLayout>

        <LinearLayout style="@style/buttonLayoutStyle">

            <ImageButton
                android:id="@+id/insert_img_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/button_menu_selector"
                android:src="@drawable/ic_insert_img"/>

            <TextView
                android:id="@+id/insert_img_text"
                style="@style/buttonTextStyle"
                android:text="插入图片"/>
        </LinearLayout>

        <LinearLayout style="@style/buttonLayoutStyle">

            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:background="@drawable/button_menu_selector"
                android:src="@drawable/ic_close"/>

            <TextView
                android:id="@+id/close_text"
                style="@style/buttonTextStyle"
                android:text="关闭"/>
        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:id="@+id/page_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/prev_page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/button_menu_selector"
            android:src="@drawable/ic_prev"/>

        <ImageButton
            android:id="@+id/new_page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/button_menu_selector"
            android:src="@drawable/ic_add"/>

        <ImageButton
            android:id="@+id/page_count_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/button_menu_selector"
            android:src="@drawable/ic_share"/>

        <ImageButton
            android:id="@+id/remove_page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/button_menu_selector"
            android:src="@drawable/ic_remove"/>

        <ImageButton
            android:id="@+id/next_page_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/button_menu_selector"
            android:src="@drawable/ic_next"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/eraser_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/paint_menu"
        app:layout_constraintLeft_toLeftOf="@+id/paint_menu">

        <ImageButton
            android:id="@+id/erase_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/button_menu_selector"
            android:src="@drawable/ic_eraser"/>

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <com.SiWei.PaintingApp.CustomSlideToUnlockView
            android:id="@+id/slider"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/color_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/pencolor_black_button"
            style="@style/buttonIconStyle"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_color_black"/>

        <ImageButton
            android:id="@+id/pencolor_red_button"
            style="@style/buttonIconStyle"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_color_red"/>

        <ImageButton
            android:id="@+id/pencolor_green_button"
            style="@style/buttonIconStyle"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_color_green"/>

        <ImageButton
            android:id="@+id/pencolor_blue_button"
            style="@style/buttonIconStyle"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_color_blue"/>

        <ImageButton
            android:id="@+id/pencolor_purple_button"
            style="@style/buttonIconStyle"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_color_purple"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/paint_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/erase_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_menu_selector"
            android:src="@drawable/ic_eraser"/>

        <ImageButton
            android:id="@+id/select_drag_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_menu_selector"
            android:src="@drawable/ic_drag"/>

        <ImageButton
            android:id="@+id/lasso_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_menu_selector"
            android:src="@drawable/ic_lasso"/>

        <ImageButton
            android:id="@+id/undo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_menu_selector"
            android:src="@drawable/ic_undo"/>

        <ImageButton
            android:id="@+id/redo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_menu_selector"
            android:src="@drawable/ic_redo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thumbnail_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/page_menu"
        app:layout_constraintRight_toRightOf="@+id/page_menu"
        app:layout_constraintBottom_toTopOf="@+id/page_menu">

    </LinearLayout>
</android.support.constraint.ConstraintLayout>