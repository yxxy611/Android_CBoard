<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.SiWei.PaintingApp.MainActivity">


    <com.SiWei.PaintingApp.PaletteView
        android:id="@+id/palette"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </com.SiWei.PaintingApp.PaletteView>
    <LinearLayout

        android:layout_width="match_parent" android:layout_height="match_parent">

       <com.SiWei.PaintingApp.CirclePanelView
           android:id="@+id/circlePanel"
           android:layout_width="match_parent"
           android:layout_height="match_parent"/>

    </LinearLayout>

    <include android:id = "@+id/bottom_bar"
    layout="@layout/bottom_ui_layout"/>
</android.support.constraint.ConstraintLayout>
